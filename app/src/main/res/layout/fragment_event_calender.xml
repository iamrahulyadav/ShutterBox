<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    tools:context="com.ansoft.shutterbox.Fragments.EventCalenderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/navBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/incrmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_back" />

                <ImageView
                    android:id="@+id/dcrmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_back_inverted" />

                <TextView
                    android:id="@+id/calMonthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="January 2017"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />
            </RelativeLayout>

            <com.ansoft.shutterbox.Util.Calendar.CompactCalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/navBar"
                app:eventsDayTextColor="#ffffff"
                app:compactCalendarBackgroundColor="#fffefe"
                app:compactCalendarCurrentDayBackgroundColor="#ffffff"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#ffffff"
                app:compactCalendarTextColor="#902245"
                app:compactCalendarTextSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_gradient_events"
            android:id="@+id/rl1">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="7"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvDate1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Singers"
                android:id="@+id/tvName1"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/tvDate1"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:src="@drawable/ic_back_white_inverted"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_gradient_events"
            android:id="@+id/rl2">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="7"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvDate2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Singers"
                android:id="@+id/tvName2"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/tvDate2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView7"
                android:src="@drawable/ic_back_white_inverted"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_gradient_events"
            android:id="@+id/rl3">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="7"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvDate3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Singers"
                android:id="@+id/tvName3"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/tvDate3"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView72"
                android:src="@drawable/ic_back_white_inverted"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_gradient_events"
            android:id="@+id/rl4">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="7"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bg_circle"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvDate4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Singers"
                android:id="@+id/tvName4"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/tvDate4"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView723"
                android:src="@drawable/ic_back_white_inverted"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
